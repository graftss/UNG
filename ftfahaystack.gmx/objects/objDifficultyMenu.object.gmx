                else if(select2==1) scrDrawTextOutline(x + i*xSeperation + 64, y+49,"&lt; Hard &gt;",c_yellow,c_black);
                else if(select2==2) scrDrawTextOutline(x + i*xSeperation + 64, y+49,"&lt; Very Hard &gt;",c_orange,c_black);
                else if(select2==3) scrDrawTextOutline(x + i*xSeperation + 64, y+49,"&lt; Impossible &gt;",c_red,c_black);
            }
            else
            {
                scrDrawTextOutline(x+i*xSeperation+64,y-100,"are you sure?",c_white,c_black)
                if(warnSelect) scrDrawTextOutline(x + i*xSeperation + 64, y+49,"yes",c_white,c_black);
                else scrDrawTextOutline(x + i*xSeperation + 64, y+49,"no",c_white,c_black);
            }
        }
        
        if (exists[i])
        {        
            if ((!difSelect) || (difSelect &amp;&amp; i != select))
            {
                if(difficulty[i]==0){scrDrawTextOutline(x+i*xSeperation+64,y+49,"saved game",c_white,c_black)}
                else if(difficulty[i]==1){scrDrawTextOutline(x+i*xSeperation+64,y+49,"Hard",c_yellow,c_black)}
                else if(difficulty[i]==2){scrDrawTextOutline(x+i*xSeperation+64,y+49,"Very Hard",c_orange,c_black)}
                else if(difficulty[i]==3){scrDrawTextOutline(x+i*xSeperation+64,y+49,"Impossible",c_red,c_black)}
            }
            
            draw_set_font(fDefault24);
            
            if(clear[i]){scrDrawTextOutline(x+i*xSeperation+63-8,y-32,"clear",c_white,c_black)}
            
            if(boss[0,i]){draw_sprite(sprBossItem,0,x+i*xSeperation+0-16,y+128)}
            if(boss[1,i]){draw_sprite(sprBossItem,1,x+i*xSeperation+32-16,y+128)}
            if(boss[2,i]){draw_sprite(sprBossItem,2,x+i*xSeperation+64-16,y+128)}
            if(boss[3,i]){draw_sprite(sprBossItem,3,x+i*xSeperation+96-16,y+128)}
            if(boss[4,i]){draw_sprite(sprBossItem,4,x+i*xSeperation+128-16,y+128)}
            if(boss[5,i]){draw_sprite(sprBossItem,5,x+i*xSeperation+0-16,y+160)}
            if(boss[6,i]){draw_sprite(sprBossItem,6,x+i*xSeperation+32-16,y+160)}
            if(boss[7,i]){draw_sprite(sprBossItem,7,x+i*xSeperation+64-16,y+160)}
            if(boss[8,i]){draw_sprite(sprBossItem,8,x+i*xSeperation+96-16,y+160)}
            if(boss[9,i]){draw_sprite(sprBossItem,9,x+i*xSeperation+128-16,y+160)}
            if(boss[10,i]){draw_sprite(sprBossItem,10,x+i*xSeperation+0-16,y+192)}
        }
        else
        {
            if ((!difSelect) || (difSelect &amp;&amp; i != select))
            {
                scrDrawTextOutline(x+i*xSeperation+64,y+49,"no data",c_white,c_black);
